<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="7dp"
    android:background="#FFFFFF"
    android:padding="16dp">

    <com.example.stichitv2.VerticalTextView
        android:id="@+id/customer_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/rounded_rectangle_outlined"
        android:gravity="right|center_horizontal"
        android:paddingHorizontal="2dp"
        android:text="KM-AM-69"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#663100"
        android:textSize="12sp"></com.example.stichitv2.VerticalTextView>

    <ImageView
        android:id="@+id/customer_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="6dp"
        android:layout_weight="0"
        app:srcCompat="@drawable/person_face_img" />

    <LinearLayout
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Muraad Saeed"
                android:textColor="#131313"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ordercompleteddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="23rd Feb,2020"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/customer_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/icon_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center_vertical|end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_marker" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Islamabad"
                    android:maxLength="15"
                    android:textAlignment="textStart"
                    android:textColor="#757575"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/icon_dress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0"
                android:gravity="center_vertical|end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dress_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_outfit" />

                <TextView
                    android:id="@+id/dress_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Kurta Lahori"
                    android:maxLength="15"
                    android:textAlignment="textStart"
                    android:textColor="#757575"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>